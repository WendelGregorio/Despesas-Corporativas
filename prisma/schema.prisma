generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Colaborador {
  idColaborador String    @id
  saldo         Float     @default(0.00)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  idTipo        Int
  Despesa       Despesa[]

  @@map("colaboradores")
}

model TipoDespesa {
  idTipo        Int       @id
  descricaoTipo String
  Despesa       Despesa[]

  @@map("TiposDespesas")
}

model Despesa {
  idDespesa      String    @id @default(uuid())
  idFat          String    @default(uuid())
  IdDespesaOwner String
  IdTipoDespesa  Int
  idMoeda        Int
  valor          Float
  createdAt      DateTime  @default(now())
  updatedAt      DateTime
  dataDespesa    DateTime
  localDespesa   String
  comentario     String?
  imageNF        String?
  idStatus       Int
  dateApproved   DateTime?

  TipoDespesa TipoDespesa @relation(fields: [IdTipoDespesa], references: [idTipo])
  Colaborador Colaborador @relation(fields: [IdDespesaOwner], references: [idColaborador])

  @@map("Despesas")
}
